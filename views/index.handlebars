<div class="wrapper">
  <div class="innter">
    <div class="highlights">
      <div class="content">
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="task-name">What is the name of your task?</label>
            <input type="text" id="task-name" class="form-control" aria-describedby="task-name"
              placeholder="Enter A Task">
          </div>
          <div class="form-group">
            <label for="task-description">Task Description</label>
            <textarea class="form-control" id="task-description" aria-describedby="task-description"
              placeholder="Enter Your Task's Description"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

        <h3>Tasks List:</h3>
        <ul id="task-list" class="list-group">
          {{#each tsks}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="task/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>
</div>

